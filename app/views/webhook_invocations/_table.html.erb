<!-- app/views/webhook_invocations/_table.html.erb -->
<div class="invocations-table-wrap">
  <table class="invocations-table">
    <thead>
      <tr>
        <th>Received</th>
        <th>Status</th>
        <th>Application</th>
        <th>HiBob employee</th>
        <th>Pinpoint comment</th>
        <th>HTTP</th>
      </tr>
    </thead>

    <tbody>
      <% webhook_invocations.each do |inv| %>
        <tr>
          <td class="mono"><%= inv.received_at&.to_fs(:db) %></td>
          <td>
            <span class="status <%= inv.status %>"><%= inv.status %></span>
          </td>
          <td class="muted"><%= inv.application_id %></td>
          <td class="muted"><%= inv.hibob_employee_id %></td>
          <td class="muted"><%= inv.pinpoint_comment_id %></td>
          <td class="mono"><%= inv.http_status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>